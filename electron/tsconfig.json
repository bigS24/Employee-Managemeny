{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "../dist-electron",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "../node_modules",
        "../dist",
        "../dist-electron"
    ]
}