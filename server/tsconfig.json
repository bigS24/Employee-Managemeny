{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../dist/server",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": ".",
        "paths": {
            "@/db/*": [
                "db/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}